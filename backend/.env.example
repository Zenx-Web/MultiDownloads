# Server Configuration
PORT=5000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Storage
TEMP_STORAGE_DIR=./temp
MAX_FILE_SIZE=524288000
# 500MB in bytes

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Free Tier Limits
FREE_TIER_MAX_DOWNLOADS_PER_DAY=5
FREE_TIER_MAX_RESOLUTION=720
FREE_TIER_MAX_CONCURRENT_DOWNLOADS=2

# Premium Tier (Future - TODO: integrate with payment system)
PREMIUM_TIER_MAX_DOWNLOADS_PER_DAY=999999
PREMIUM_TIER_MAX_RESOLUTION=2160
PREMIUM_TIER_MAX_CONCURRENT_DOWNLOADS=10

