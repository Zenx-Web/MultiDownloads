# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Admin Portal (frontend)
# Path must match the folder under app/ used for the admin dashboard.
ADMIN_DASHBOARD_PATH=/ops-center
# Comma separated emails that can access the admin portal.
ADMIN_ALLOWED_EMAILS=owner@example.com,ops@example.com
# Optional comma separated user_metadata roles (e.g., admin,superadmin)
ADMIN_ALLOWED_ROLES=admin
# Optional private backend URL for admin-only stats (defaults to NEXT_PUBLIC_API_URL)
ADMIN_BACKEND_URL=https://multidownloads-backend.fly.dev/api
